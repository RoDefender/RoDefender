{
    "manifest_version": 3,
    "name": "RoDefender",
    "version": "1.0.5",
    "description": "A Roblox account protection extension",
    "icons": {
      "48": "roblox_icon.png"
    },
    
    "action": {
      "default_icon": "roblox_icon.png",
      "default_popup": "popup.html"
    },

    "host_permissions": [
        "https://*/*"
        ],
    
    "permissions": [
        "cookies"
    ],

    "background": {
        "service_worker": "Guard.js"
    }
  }
  